<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
       "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
       "http://struts.apache.org/dtds/struts-config_1_3.dtd">
 <struts-config>
 <form-beans>
  <form-bean name="hf" type="beans.HelloFormBean" />
 </form-beans>
 <action-mappings>
 <action path="/hello" name="hf" type="beans.HelloFormController" input="/index.jsp">
 <forward name="sucess" path="/sucess.jsp"></forward>
 </action>
 </action-mappings>
 <message-resources parameter="beans.Messages"/>
 </struts-config>